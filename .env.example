# American Mortgage - Environment Variables Example
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control

# ===================
# DATABASE
# ===================
DATABASE_URL=postgresql://YOUR_USER:YOUR_PASSWORD@localhost:5432/american_mortgage

# ===================
# AUTHENTICATION
# ===================
# JWT Secret for admin authentication (generate with: openssl rand -base64 32)
JWT_SECRET=your-jwt-secret-here

# ===================
# LEGACY CMS (optional, for migration)
# ===================
PAYLOAD_API_URL=http://localhost:3001
NEXT_PUBLIC_CMS_URL=http://localhost:3001

# ===================
# EMAIL (SendGrid)
# ===================
SENDGRID_API_KEY=SG.your-api-key-here
SENDGRID_FROM_EMAIL=giveaways@yourdomain.com
SENDGRID_FROM_NAME=Your Company Giveaways

# Quotes email sender (can be different from giveaways)
SENDGRID_QUOTES_FROM_EMAIL=quotes@yourdomain.com
SENDGRID_QUOTES_FROM_NAME=Your Name

# ===================
# SMS (Twilio)
# ===================
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ===================
# OPTIONAL
# ===================
# Set to "true" for staging environment banner
NEXT_PUBLIC_IS_STAGING=false
